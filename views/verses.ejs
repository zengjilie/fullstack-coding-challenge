                    e.addEventListener('click', popVerse);
                })

                async function popVerse(button) {
                    console.log(button.target.innerText);

                    //fetch verse data;
                    const response = await fetch('/goo');
                    response.json().then(
                        data => {
                            console.log(data)
                        }
                    );
                }


            </script>
</body>

</html>